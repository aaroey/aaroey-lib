snippet case "case statement"
case ${1:word} in
  ${2:pattern})
    $3;;
esac
endsnippet

snippet "if "  "if statement" brA
if [[ $0 ]]; then
fi
endsnippet

snippet "for " "for statement" brA
for ${1:i} in $0; do
done
endsnippet

snippet "\) {" "Curly brackets" irA
) {
  $0
}
endsnippet

snippet "((# *)?todo)" "TODO" brA
# TODO(laigd): 
endsnippet
