snippet "(ccb|pyl|javal)" "cc_binary|py_library|java_library" brA
`!p
k = match.group(1)
if k == 'ccb':
  snip.rv = 'cc_binary'
elif k == 'pyl':
  snip.rv = 'py_library'
elif k == 'javal':
  snip.rv = 'java_library'
else:
  snip.rv = 'ERROR!!!'
`(
    name = "$1",
    srcs = ["$2"],
    deps = [
        $0
    ],
)
endsnippet

snippet "(cc|cuda)l" "cc_library|cuda_library" brA
`!p snip.rv = match.group(1)`_library(
    name = "$1",
    srcs = ["${3:$1.cc}"],
    hdrs = ["${2:$1.h}"],
    deps = [
        $0
    ],
)
endsnippet
