# unbind existing keys
unbind-key Up
unbind-key Down
unbind-key Left
unbind-key Right
unbind-key M-Up
unbind-key M-Down
unbind-key M-Left
unbind-key M-Right
unbind-key C-Up
unbind-key C-Down
unbind-key C-Left
unbind-key C-Right
unbind-key M-n
unbind-key M-o
unbind-key M-p

# mouse (this will disable the middle key paste functionality)
# set-window-option -g mode-mouse on
